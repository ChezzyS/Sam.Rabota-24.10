<Page x:Class="Сам_работа_24._10_.Работы.TargetNullValue"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сам_работа_24._10_.Работы"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="TargetNullValue">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="TargetNullValue" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <StackPanel Grid.Row="1">
            <Label x:Name="TargetLabel" Content="{Binding TargetNullValue='Привет мир'}" FontSize="16"/>
            <StackPanel Orientation="Horizontal" Height="40">
                <Button Content="Value = Мой текст" Padding="5" Margin="5" Click="Value_MyText_Click"/>
                <Button Content="Value = Null" Padding="5" Margin="5" Click="Value_Null_Click"/>
                <Button Content="Value = 505" Padding="5" Margin="5" Click="Value_123_Click"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Page>
