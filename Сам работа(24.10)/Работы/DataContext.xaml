<Page x:Class="Сам_работа_24._10_.Работы.DataContext"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Сам_работа_24._10_.Работы"
      mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DataContext">
    <Grid>
        <Grid.RowDefinitions>
        <RowDefinition Height="Auto"/>
        <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Label Grid.Row="0" Content="DataContext" HorizontalAlignment="Center" Margin="0" VerticalAlignment="Top" FontSize="20" FontWeight="Bold"/>
        <StackPanel Grid.Row="1">
            <Button x:Name="Rnd" Content="{Binding RandomValue, TargetNullValue=Null, FallbackValue=Random}" MinHeight="30" Margin="5" Click="Rnd_Click"/>
        </StackPanel>
    </Grid>
</Page>
